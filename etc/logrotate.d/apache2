/var/log/apache2/*.log {
    missingok
    compress
    delaycompress
    notifempty
    create 640 root adm
    sharedscripts
    postrotate
        if pgrep -f ^/usr/sbin/apache2 > /dev/null; then
            invoke-rc.d apache2 reload 2>&1 | logger -t apache2.logrotate
        fi
    endscript
    prerotate
        for f in /var/log/apache2/*.log; do
            if [ -L "$f" -o ! -f "$f" ]; then
                exit 1
            fi
        done
    endscript
}
